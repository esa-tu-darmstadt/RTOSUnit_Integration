ifeq ($(EMBEDDED_ABI),Y)
	EXTRA_ARGS += -DGEN_RF_SIZE=16
else
	EXTRA_ARGS += -DGEN_RF_SIZE=32
endif

ifeq ($(DUAL_PORT),Y)
	EXTRA_ARGS += -DDUAL_PORT
endif

ifeq ($(ISR_RF_SIZE),)
	ifeq ($(TCB),HW)
		EXTRA_ARGS += -DISR_RF_SIZE=0
	else
		ifeq ($(EMBEDDED_ABI),Y)
			EXTRA_ARGS += -DISR_RF_SIZE=16
		else
			ifeq ($(RV32I_CV32RT),Y)
				EXTRA_ARGS += -DISR_RF_SIZE=0 -DRV32I_CV32RT
			else
				EXTRA_ARGS += -DISR_RF_SIZE=32
			endif
		endif
	endif
else
	EXTRA_ARGS += -DISR_RF_SIZE=$(ISR_RF_SIZE)
endif